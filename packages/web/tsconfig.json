{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": ".cache/tsbuild",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/app/*": ["./src/app/*"],
      "~/data/*": ["./src/data/*"],
      "~/features/*": ["./src/features/*"],
      "~/shared/*": ["./src/shared/*"]
    },
    "composite": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*",
    "postcss.config.js",
    "vite.config.ts",
    "tailwind.config.ts",
    "lingui.config.ts",
    "tests/**/*",
    "playwright.config.ts"
  ]
}
